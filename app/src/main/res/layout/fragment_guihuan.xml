<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="权证归还"
        android:textSize="20sp"
        android:gravity="center_vertical|left"
        android:background="@drawable/shape_label1"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:weightSum="1">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="标签编号"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:text="扫描获取标签编号"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/tv_bqbh3"/>
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:weightSum="1">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="归还时间"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:id="@+id/tv_ghsj3"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/img_cld"
            android:background="@drawable/shape_cld"
            android:id="@+id/btn_dp3"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:weightSum="1">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="权证名"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:id="@+id/tv_qzm3"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:weightSum="1">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="权证编号"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:id="@+id/tv_qzbh3"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:weightSum="1">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="权证状态"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:id="@+id/tv_qzzt3"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:weightSum="1">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="创建时间"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:id="@+id/tv_cjsj3"/>
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="42dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:text="扫描"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_lable3"
            android:id="@+id/btn_sm3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft= "45dp" />
        <Button
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:text="提交"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_lable3"
            android:id="@+id/btn_tj3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp" />
    </RelativeLayout>

</LinearLayout>