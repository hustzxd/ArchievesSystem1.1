<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="scan"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/shape_label1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_weight="0.03"
        android:weightSum="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:text="原密码 :"
            android:gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:text="00000000"
            android:id="@+id/tv_oldkey"/>
    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_weight="0.03"
        android:weightSum="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:text="I D :"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/tv_scanid"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_lable3"
        android:text="扫描标签"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_weight="0.03"
        android:weightSum="1">

        <Button
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_lable3"
            android:text="读标签"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_scanr"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:text="标签数据区内容"
            android:id="@+id/tv_scanr"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_weight="0.03"
        android:weightSum="1">

        <Button
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_lable3"
            android:layout_marginLeft="10dp"
            android:text="写标签"
            android:id="@+id/btn_scanw"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:text="写入标签内容"
            android:id="@+id/tv_scanw"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Modify Key"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:background="@drawable/shape_label1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_weight="0.03"
        android:weightSum="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:text="新密码 :"
            android:gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/shape_lable2"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/tv_newkey"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_modify"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_lable3"
        android:text="修改秘钥"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>
</LinearLayout>